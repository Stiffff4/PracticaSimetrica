@model Database.Models.CandidatoEvaluacion

@{
    ViewData["Title"] = "ObtenerEvaluacion";
}

<div>
    <h3>Evaluaciones de @Model.candidato.nombre @Model.candidato.apellido</h3>
    <hr />
    @if (Model.listaEvaluaciones.Count > 0)
    {
        @foreach (var item in Model.listaEvaluaciones)
        {
            <dl class="row">
                <dt class="col-sm-10">
                    ID de la evaluacion
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.id)
                </dd>
                <dt class="col-sm-10">
                    Fecha de la evaluación
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.fecha_evaluacion)
                </dd>
                <dt class="col-sm-10">
                    Resultado del examen psicológico
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.resultado_examen_psicologico)
                </dd>
                <dt class="col-sm-10">
                    Resultado del examen de algoritmos
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.resultado_examen_algoritmos)
                </dd>
                <dt class="col-sm-10">
                    Resultado del examen de SQL
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.resultado_examen_sql)
                </dd>
                <dt class="col-sm-10">
                    Total
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.resultado_final)
                </dd>
                <dt class="col-sm-10">
                    Condición
                </dt>
                @if (item.resultado_final > 6)
                {
                    <dd class="col-sm-10">
                        Aprobado
                    </dd>
                }
                else
                {
                    <dd class="col-sm-10">
                        Reprobado
                    </dd>
                }

            </dl>
            <hr />
        }
    }
    else
            {
                <h5>Este candidato aún no ha sido evaluado</h5>
                <br/>
                <br/>
            }

</div>
<div>
    @Html.ActionLink("Regresar a la lista de candidatos", "Obtener", "Candidato")
</div>
