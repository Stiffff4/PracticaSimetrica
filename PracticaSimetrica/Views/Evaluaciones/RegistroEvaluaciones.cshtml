@model Database.Models.CandidatoEvaluacion

@{
    ViewData["Title"] = "Evaluar";
}
<h4>Evaluar a @Model.candidato.nombre @Model.candidato.apellido</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistroEvaluaciones">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="evaluacion.id_candidato" value="@Model.evaluacion.id_candidato" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de la evaluación</label>
                @*<input asp-for="evaluacion.fecha_evaluacion" asp-format="{0:dd/MM/yyyy}" class="form-control" />*@
                @Html.EditorFor(model => model.evaluacion.fecha_evaluacion, new { htmlAttributes = new { @class = "form-control" }})
                @Html.ValidationMessageFor(model => model.evaluacion.fecha_evaluacion, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Resultado del examen psicológico</label>
                @Html.EditorFor(model => model.evaluacion.resultado_examen_psicologico, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.evaluacion.resultado_examen_psicologico, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Resultado del examen de algoritmos</label>
                @Html.EditorFor(model => model.evaluacion.resultado_examen_algoritmos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.evaluacion.resultado_examen_algoritmos, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Resultado del examen de SQL</label>
                @Html.EditorFor(model => model.evaluacion.resultado_examen_sql, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.evaluacion.resultado_examen_sql, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Resultado total</label>
                @Html.EditorFor(model => model.evaluacion.resultado_final, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.evaluacion.resultado_final, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar evaluación" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Regresar a la lista de candidatos", "Obtener", "Candidato")
</div>